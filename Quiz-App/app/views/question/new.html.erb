<% if session[:admin] == "yes" %>
<% provide(:title, 'Add a Question') %>
<h1>Add a Question</h1>
<table>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= form_for(@question, url: add_question_path) do |f| %>
	  <%= render 'shared/question_error_messages' %>

	  <%= f.label :question %>
	  <%= f.text_field :question , class: 'form-control'%>

	  <%= f.label :option1 %>
	  <%= f.text_field :option1 , class: 'form-control'%>

      <%= f.check_box :a1 %>

	  <%= f.label :option2 %>
	  <%= f.text_field :option2 , class: 'form-control'%>

      <%= f.check_box :a2 %>

	  <%= f.label :option3 %>
	  <%= f.text_field :option3 , class: 'form-control'%>

      <%= f.check_box :a3 %>

      <%= f.label :option4 %>
	  <%= f.text_field :option4 , class: 'form-control'%>
	  
      <%= f.check_box :a4 %>

	  <%= f.label :genre %>
	  <%= f.text_field :genre , class: 'form-control'%>

	  <%= f.submit "Add Question", class: "btn btn-primary" %>
	<% end %>
  </div>
</div>
</table>
<% else %>
<h1> UnAuthorized Access </h1>
<% end %>